{
  "name": "uner.programacion-iii-tp-final",
  "version": "1.0.0",
  "description": "",
  "type": "module",
  "main": "src/app.js",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "dev": "node src/scripts/clean-console.js && cross-env NODE_ENV=development nodemon --watch src/app.js",
    "debug": "node src/scripts/clean-console.js && cross-env NODE_ENV=debug nodemon --inspect src/app.js",
    "prod": "node src/scripts/clean-console.js && cross-env NODE_ENV=production nodemon src/app.js",
    "start": "node src/scripts/clean-console.js && cross-env NODE_ENV=production node src/app.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AmazingCrab/UNER.Programacion-III-TP-Final.git"
  },
  "keywords": [],
  "author": "Mailen Ovejero, Emanuel Conte",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/AmazingCrab/UNER.Programacion-III-TP-Final/issues"
  },
  "homepage": "https://github.com/AmazingCrab/UNER.Programacion-III-TP-Final#readme",
  "dependencies": {
    "chalk": "^5.6.2",
    "compresion": "^1.7.11",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "express-validator": "^7.2.1",
    "helmet": "^8.1.0",
    "json2csv": "^6.0.0-alpha.2",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.1",
    "mysql2": "^3.15.2",
    "nodemailer": "^7.0.10",
    "nodemon": "^3.1.10",
    "pdfkit": "^0.17.2",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1"
  },
  "nodemonConfig": {
    "name": "my-app",
    "version": "1.0.0",
    "scripts": {
      "dev": "nodemon"
    },
    "nodemonConfig": {
      "restartable": "rs",
      "verbose": false,
      "watch": [
        "src/",
        "routes/",
        "config/",
        ".env.development"
      ],
      "ignore": [
        "node_modules/**",
        "dist/",
        "test/*.spec.ts"
      ],
      "exec": "node",
      "ext": "js,json,ts",
      "delay": "1000",
      "env": {
        "NODE_ENV": "development",
        "PORT": "3000"
      }
    }
  },
  "devDependencies": {
    "cross-env": "^10.1.0"
  }
}
